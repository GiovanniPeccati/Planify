<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="task-container">
      <h2 class="task-heading">I Tuoi Compiti</h2>

      <% if (list.length > 0) { %>
      <div class="task-grid">
        <% list.forEach(item => { %>
        <a href="/todos/<%= item._id %>" class="task-item">
          <h3 class="task-title"><%= item.title %></h3>
          <p class="task-details"><%= item.details %></p>
        </a>
        <% }) %>
      </div>
      <% } else { %>
      <p class="no-tasks">Nessun compito da svolgere...</p>
      <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
